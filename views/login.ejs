<!--Purpose: Login page for signing into website, also the main page-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="style.css"/>
</head>
<body>
<!-- Description : Logo button.-->
<div>
    <form action="loginlogo" method="post">
        <input class="logo" type="image" src="logo.png" alt="logo">
    </form>
</div>

<!-- Description : Login form.-->
<div class="loginDiv">
    <h1>Login</h1>
    <form id="login" name="loginForm" action="/login" onsubmit="return formValidation() "
          method="post">
        <label for="username">Username:</label>
        <input class="loginInput" id="username" autocomplete="off" name="username" type="text"
               placeholder="Enter username/email">
        <label for="password">Password: </label>
        <input class="loginInput" id="password" name="password" type="password" placeholder="Enter Password">
        </br>
        <button class="loginButton">Login</button>
    </form>
    </br>
    </br>
    Not Registered? Create Account:
    <form action="/signUp">
        <button class="loginButton">Sign Up</button>
    </form>
</div>

</body>
</html>